generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Snippet {
  id        String   @id @default(cuid())
  code      String   @db.Text
  language  String   @default("html")
  theme     String   @default("vs-dark")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([id])
}
